pipeline {
    agent any
    parameters {
        string(name: 'NOM', description: 'Entrez votre nom')
        string(name: 'PRENOM', description: 'Entrez votre pr√©nom')
        string(name: 'BIRTH', description: 'Entrez votre date de naissance')
        choice(name: 'GENDER', choices: ['Homme', 'Femme', 'Autre'], description: 'Choisir votre genre')
    }
    
    stages {
        stage('Hello') {
            steps {
                echo "Hello world"
            }
        }
        stage('Test') {
            steps {
                echo "Test"
            }
        }
        stage('Build') {
            steps {
                script{
                    def nom = "${params.NOM}"
                    def prenom = "${params.PRENOM}"
                    def birth = "${params.BIRTH}"
                    #calculer age
                    def gender = "${params.GENDER}"
                }
            }
        }
        stage('Deploy') {
            steps {
                echo "Deploy"
            }
        }
    }
}
