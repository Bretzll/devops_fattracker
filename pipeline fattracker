pipeline {
    agent any
    parameters {
        string(name: 'NOM', description: 'Entrez votre nom')
        string(name: 'PRENOM', description: 'Entrez votre pr√©nom')
        string(name: 'BIRTH', description: 'Entrez votre date de naissance')
        choice(name: 'SEX', choices: ['Homme', 'Femme'], description: 'Choisir votre sexe')
    }
    
    stages {
        stage('Hello') {
            steps {
                echo "Hello world"
            }
        }
        stage('Test') {
            steps {
                echo "Test"
            }
        }
        stage('Build') {
            steps {
                script{
                    def nom = "${params.NOM}"
                    def prenom = "${params.PRENOM}"
                    def birth = "${params.BIRTH}"
                    def sexe = "${params.SEX}"
                }
            }
        }
        stage('Deploy') {
            steps {
                echo "Deploy"
            }
        }
    }
}
